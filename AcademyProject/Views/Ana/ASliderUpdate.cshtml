
@model EntityLayer.Concrete.Slider

@{
	ViewBag.Title = "ASliderUpdate";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Slider Güncelleme</h4>
			<div class="basic-form">
				@using (Html.BeginForm("ASliderUpdate", "Ana", FormMethod.Post, new { enctype = "multipart/form-data" }))
				{
					@Html.HiddenFor(x => x.SliderId)
				<div class="form-group">
					@Html.Label("Başlık")
					@Html.TextBoxFor(x => x.SliderTitle, new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.SliderTitle, "", new { @class = "text-danger" })
				</div>
				<div class="form-group">
					@Html.Label("İçerik")
					@Html.TextAreaFor(x => x.SliderDesc, 2, 20, new { @class = "form-control", @id = "editorid"})
					@Html.ValidationMessageFor(x => x.SliderDesc, "", new { @class = "text-danger" })
				</div>
					<div class="form-group">
						<label>Resim</label>
						<input type="file" name="Image" class="form-control">
					</div>
					<button type="submit" class="btn btn-dark">Güncelle</button>
				}
			</div>
		</div>
	</div>
</div>


