
@model IEnumerable<EntityLayer.Concrete.GazeteDergi>

@{
	ViewBag.Title = "GazeteDergiList";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12">
	<a class="btn btn-info mb-3" href="/GazeteDergi/AAddGazeteDergi/">Yeni Gazete ve Dergi</a>
	<div class="card">
		<div class="card-body">
			<div class="card-title">
				<h4>Gazete ve Dergi</h4>
			</div>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Title</th>
							<th>Sil</th>
							<th>Güncelle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
						<tr>
							<th>@item.GazID</th>
							<td>@Html.Raw(item.Title)</td>
							<td><a href="/GazeteDergi/AGazeteDergiDelete/@item.GazID" class="btn btn-danger">Sil</a></td>
							<td><a href="/GazeteDergi/AGazeteDergiUpdate/@item.GazID" class="btn btn-outline-success">Güncelle</a></td>
							
						</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>



