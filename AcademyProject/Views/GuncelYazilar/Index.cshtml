
@model IEnumerable<EntityLayer.Concrete.GuncelYazilar>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
	<div class="container">

		<div class="d-flex justify-content-between align-items-center">
			<h2>Güncel Yazılar</h2>
			<ol>
				<li><a href="/Ana/Index/">Ana Sayfa</a></li>
				<li>Güncel Yazılar</li>
			</ol>
		</div>

	</div>
</section><!-- End Breadcrumbs -->
<!-- ======= Blog Section ======= -->
<section id="blog" class="blog">
	<div class="container" data-aos="fade-up">

		<div class="row">

			<div class="col-lg-12 entries">

				@foreach (var item in Model)
				{
					<article class="entry">


						<h2 class="entry-title">
							<a href="@item.File" target="_blank">@item.Title</a>
						</h2>

						<div class="entry-meta">
							<ul>
								<li class="d-flex align-items-center"><i class="bi bi-person"></i> <a href="#">Nazire Akbulut</a></li>
								<li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a href="#"><time datetime="">@item.DateYazi.ToString("d MMMMM yyy")</time></a></li>
								
							</ul>
						</div>

						<div class="entry-content">							
							<div class="read-more">
								<a href="@item.File" target="_blank">Devamını Oku...</a>
							</div>
						</div>

					</article>
				}

			</div><!-- End blog entries list -->

		</div>

	</div>
</section><!-- End Blog Section -->
