
@model IEnumerable<EntityLayer.Concrete.Kitap>

@{
	ViewBag.Title = "AKitapList";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<a href="/Kitap/ANewKitap/" class="btn btn-primary mb-3">Yeni Ekle</a>

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-lg-4 col-sm-6">
			<div class="card">
				<div class="card-body">
					<div class="text-center">
						<img src="@item.KitapImage" alt="" class="img-fluid mb-2" style="width: 100%; height: 230px; object-fit: cover;">
						<h5 class="mt-3 mb-1">@item.KitapTitle</h5>
						<p class="m-0 p-1">@item.KitapDate.ToString("d MMMMM yyy")</p>
						@if (item.Status == true)
						{
							<p class="m-0 p-1 text-success">Yayında</p>
						}
						else
						{
							<p class="m-0 p-1 text-danger">Yayında Değil</p>
						}
						<br />
					</div>
					<div class="text-center mb-2">
						<a href="/Kitap/ADeleteKitap/@item.KitapID" class="btn btn-success">Sil</a>
						<a href="/Kitap/AKitapUpdate/@item.KitapID" class="btn btn-warning">Güncelle</a>
						@if (item.Status == true)
						{
							<a href="/Kitap/AKitapDoFalse/@item.KitapID" class="btn btn-danger">Pasif Yap</a>
						}
						else
						{
							<a href="/Kitap/AKitapDoTrue/@item.KitapID" class="btn btn-success">Aktif Yap</a>
						}
					</div>
				</div>
			</div>
		</div>
	}
</div>


