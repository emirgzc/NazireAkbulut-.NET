
@model IEnumerable<EntityLayer.Concrete.MesKurUye>

@{
	ViewBag.Title = "MesKurUyeList";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12">
	<a class="btn btn-info mb-3" href="/MesKurUye/AAddMesKurUye/">Yeni Mesleki Kuruluşlara Üyelik</a>
	<div class="card">
		<div class="card-body">
			<div class="card-title">
				<h4>Meslek Kuruluşlara Üyelikler</h4>
			</div>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Title</th>
							<th>Sil</th>
							<th>Güncelle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<th>@item.MesKurId</th>
								<td>@Html.Raw(item.Title)</td>
								<td><a href="/MesKurUye/AMesKurUyeDelete/@item.MesKurId" class="btn btn-danger">Sil</a></td>
								<td><a href="/MesKurUye/AMesKurUyeUpdate/@item.MesKurId" class="btn btn-outline-success">Güncelle</a></td>

							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

