
@model EntityLayer.Concrete.About

@{
	ViewBag.Title = "AAboutUpdate";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Hakkımızda Güncelleme</h4>
			<div class="basic-form">
				@using (Html.BeginForm("AAboutUpdate", "About", FormMethod.Post))
				{
					@Html.HiddenFor(x => x.AboutId)
					@Html.Label("Hakkımızda Başlık")
					@Html.TextBoxFor(x => x.Title, new { @class = "form-control", @required = "@required"})
					@Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
					<br />
					<div class="form-group">
						@Html.Label("Hakkımızda Detay")
						@Html.TextAreaFor(x => x.Desc, 8, 20, new { @class = "form-control", @id = "editorid" })
						@Html.ValidationMessageFor(x => x.Desc, "", new { @class = "text-danger" })
					</div>
					<button type="submit" class="btn btn-dark">Güncelle</button>
				}
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script src="~/mazer/dist/assets/vendors/ckeditor/ckeditor.js"></script>
	<script>
		CKEDITOR.replace("editorid")
	</script>
}


