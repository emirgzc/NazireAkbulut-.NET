
@model IEnumerable<EntityLayer.Concrete.Slider>

@{
	ViewBag.Title = "ASliderList";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<section class="section">
	<div class="row" id="basic-table">
		<div class="col-12 col-md-12">
			<div class="card">
				<div class="card-header">
					<h4 class="card-title">Ana Sayfa Ayarları</h4>
				</div>
				<div class="card-content">
					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-lg">
								<thead>
									<tr>
										<th>#</th>
										<th>Başlık</th>
										<th>Açıklama</th>
										<th>Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<td>@item.SliderId</td>
											<td>@item.SliderTitle</td>
											<td>@item.SliderDesc</td>
											<td><a href="/Ana/ASliderUpdate/@item.SliderId" class="btn btn-info">Güncelle</a></td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>



