
@model IEnumerable<EntityLayer.Concrete.Contact>

@{
	ViewBag.Title = "AContactList";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row" id="table-head">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Gelen Mesajlar</h4>
			</div>
			<div class="card-content">
				<div class="table-responsive">
					<table class="table mb-0">
						<thead class="thead-dark">
							<tr>
								<th>İsim Soyisim</th>
								<th>Konu</th>
								<th>Tarih</th>
								<th>Sil</th>
								<th>Detay</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.NameSurname</td>
									<td>@item.Subject</td>
									<td>@item.ContactDate.ToString("d MMMMM yyy")</td>
									<td><a href="/Contact/AContactDelete/@item.ContactID" class="text-danger">Sil</a></td>
									<td><a href="/Contact/AContactDetails/@item.ContactID">Detay</a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>



