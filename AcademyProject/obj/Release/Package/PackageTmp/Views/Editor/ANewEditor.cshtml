
@model EntityLayer.Concrete.Editorluk

@{
	ViewBag.Title = "ANewEditor";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("ANewEditor", "Editor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<span class="text-danger">(Lütfen 3Mb' dan Yüksek Resim Yükleme Yapmayınız!)</span>
	<div class="form-group">
		@Html.Label("Başlık")
		@Html.TextBoxFor(x => x.EditTitle, new { @class = "form-control", @required = "@required"})
		@Html.ValidationMessageFor(x => x.EditTitle, "", new { @class = "text-danger" })
		<br />
		<div class="form-group">
			<label>İçerik</label>
			<textarea class="form-control" id="editorid" required="" name="EditDesc" rows="4"></textarea>
			@Html.ValidationMessageFor(x => x.EditDesc, "", new { @class = "text-danger" })
		</div>
		<br />
		@Html.Label("Resim")
		<input type="file" name="Image" class="form-control" required="">
		<br />
		<button class="btn btn-primary">Ekle</button>
	</div>
}

@section Scripts{
	<script src="~/mazer/dist/assets/vendors/ckeditor/ckeditor.js"></script>
	<script>
		CKEDITOR.replace("editorid")
	</script>
}
