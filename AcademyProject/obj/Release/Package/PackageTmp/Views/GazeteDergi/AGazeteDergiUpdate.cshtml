
@model EntityLayer.Concrete.GazeteDergi

@{
	ViewBag.Title = "AGazeteDergiUpdate";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-xl-12 col-xxl-12">
	<div class="card">
		<div class="card-header">
			<h4 class="card-title">Gazete ve Dergi Bilgileri Güncelleme</h4>
		</div>
		<div class="card-body">
			<div class="basic-form">
				@using (Html.BeginForm("AGazeteDergiUpdate", "GazeteDergi", FormMethod.Post))
				{
					@Html.HiddenFor(x => x.GazID, new { @class = "form-control input-default" })
				<div class="form-group">
					@Html.Label("Title")
					@Html.TextAreaFor(x => x.Title, 8, 20, new { @class = "form-control", @id = "editorid" })
					@Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
				</div>
					<button type="submit" class="btn btn-primary">Güncelle</button>
				}
			</div>
		</div>
	</div>
</div>



@section Scripts{
	<script src="~/mazer/dist/assets/vendors/ckeditor/ckeditor.js"></script>
	<script>
		CKEDITOR.replace("editorid")
	</script>
}