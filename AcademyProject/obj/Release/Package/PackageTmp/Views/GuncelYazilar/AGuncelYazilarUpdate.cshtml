
@model EntityLayer.Concrete.GuncelYazilar

@{
	ViewBag.Title = "AGuncelYazilarUpdate";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Editör Güncelleme</h4>
			<div class="basic-form">
				@using (Html.BeginForm("AGuncelYazilarUpdate", "GuncelYazilar", FormMethod.Post, new { enctype = "multipart/form-data" }))
				{
					@Html.HiddenFor(x => x.YaziID)
					<div class="form-group">
						@Html.Label("Başlık")
						@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						<label>Dosya</label>
						<input type="file" name="File" class="form-control">
					</div>
					<button type="submit" class="btn btn-dark">Güncelle</button>
				}
			</div>
		</div>
	</div>
</div>

