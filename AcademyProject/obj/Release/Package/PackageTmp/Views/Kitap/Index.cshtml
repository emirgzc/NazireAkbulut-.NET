
@model IEnumerable<EntityLayer.Concrete.Kitap>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<section id="breadcrumbs" class="breadcrumbs">
	<div class="container">

		<div class="d-flex justify-content-between align-items-center">
			<h2>Kitaplar veya Kitap Bölümü</h2>
			<ol>
				<li><a href="/Ana/Index/">Ana Sayfa</a></li>
				<li>Kitaplar veya Kitap Bölümü</li>
			</ol>
		</div>

	</div>
</section><!-- End Breadcrumbs -->
<section id="team" class="team section-bg">
	<div class="container">

		<div class="section-title" data-aos="fade-up">
			<h2>Kitaplar veya Kitap Bölümü</h2>
		</div>

		<div class="row">

			@foreach (var item in Model)
			{
				<div class="col-lg-3 col-md-6 d-flex align-items-stretch">
					<div class="member" data-aos="fade-up">
						<div class="member-img">
							<a href="/Kitap/KitapDetails/@item.KitapID"><img src="@item.KitapImage" class="img-fluid" alt="@item.KitapTitle" style="width: 100%; height: 350px; object-fit: cover;"></a>
							
						</div>
					</div>
				</div>
			}

		</div>

	</div>
</section><!-- End Our Team Section -->
